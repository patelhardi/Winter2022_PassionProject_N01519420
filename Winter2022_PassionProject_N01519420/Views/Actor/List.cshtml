@model IEnumerable<Winter2022_PassionProject_N01519420.Models.ActorDto>
@{
    ViewBag.Title = "List";
}

<h2>List</h2>
<form action="/Actor/List" method="GET" style="border-radius: 5px; background-color: #f2f2f2; padding: 20px;">
    <input type="text" name="SearchKey" autocomplete="off" style="width: 90%; padding: 12px; border: 1px solid #ccc; border-radius: 4px; resize: vertical;"/>
    <input type="submit" value="Search" style="background-color: gray; color: white; padding: 12px 20px; border: none; border-radius: 4px;"/>
</form>

<hr/>

@foreach(var actor in Model)
{
    <a href="/Actor/Details/@actor.ActorID">@actor.ActorFirstName @actor.ActorLastName</a><br/>
}

<br />

<div>
    <a href="/Actor/ListAll">Back to Main Page</a>
</div>