    <div class="col-md-6">
        <form action="/Movie/New" method="GET" style="border-radius: 5px; padding: 20px; margin: 10px; text-align: center;">
            <input type="submit" value="New Movie" style="background-color: orangered; color: white; padding: 12px 20px; border: none; border-radius: 4px;" />
        </form>
    </div>
</div>